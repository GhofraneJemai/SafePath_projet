<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!-- For accessing external storage pictures -->
    <external-path
        name="external_storage"
        path="." />

    <!-- For accessing Pictures directory -->
    <external-path
        name="external_pictures"
        path="Pictures/" />

    <!-- For accessing Screenshots directory -->
    <external-path
        name="screenshots"
        path="Pictures/Screenshots/" />

    <!-- For accessing DCIM directory (camera photos) -->
    <external-path
        name="external_dcim"
        path="DCIM/" />

    <!-- For accessing downloads -->
    <external-path
        name="downloads"
        path="Download/" />

    <!-- For app-specific storage -->
    <external-files-path
        name="my_images"
        path="Pictures/" />
    <external-files-path
        name="my_files"
        path="." />

    <!-- For cache -->
    <external-cache-path
        name="external_cache"
        path="." />

    <cache-path
        name="internal_cache"
        path="." />

    <files-path
        name="files"
        path="." />
</paths>