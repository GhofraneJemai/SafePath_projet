<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Bouton SOS Principal -->
        <Button
            android:id="@+id/sosButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="ALERTE SOS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/sos_button_bg"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Compte à rebours -->
        <TextView
            android:id="@+id/countdownText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Partage de position -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Partager ma position en temps réel avec mes contacts"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/locationSharingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Boutons d'urgence -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/callPoliceButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Police\n17"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_police"
                android:drawableTint="@color/white"
                android:backgroundTint="@color/primary_color"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/callAmbulanceButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAMU\n15"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_ambulance"
                android:drawableTint="@color/white"
                android:backgroundTint="@color/danger_color"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Contacts de confiance -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts de confiance"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer mes contacts"
            android:backgroundTint="@color/secondary_color"
            android:onClick="openContactsManagement" />
        <Button
            android:id="@+id/debugButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Save"
            android:onClick="onDebugClick" />
    </LinearLayout>

</ScrollView>