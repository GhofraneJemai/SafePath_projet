<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:onClick="onBackPressed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ItinÃ©raire SÃ©curisÃ©"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Search Section -->
    <LinearLayout
        android:id="@+id/searchSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <EditText
            android:id="@+id/destinationEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Entrez une adresse ou cliquez sur la carte"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Selected Location Info -->
    <TextView
        android:id="@+id/selectedLocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchSection"
        android:padding="8dp"
        android:text="Cliquez sur la carte pour sÃ©lectionner une destination"
        android:background="@color/gray"
        android:textColor="@color/black" />

    <!-- Map -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/selectedLocationText"
        android:layout_above="@id/controlsSection" />

    <!-- Danger Alert Section -->
    <LinearLayout
        android:id="@+id/dangerAlertLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/controlsSection"
        android:orientation="vertical"
        android:background="@drawable/ic_danger"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš ï¸ ALERTE DE SÃ‰CURITÃ‰"
            android:textColor="@color/danger_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dangerCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dangers dÃ©tectÃ©s sur votre chemin"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/viewDangersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Voir les dÃ©tails des dangers"
            android:backgroundTint="@color/danger_color"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/acceptRedirectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prendre un chemin alternatif"
            android:backgroundTint="@color/safe_color"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/ignoreDangersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Continuer quand mÃªme"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/danger_color" />

    </LinearLayout>

    <!-- Controls Section -->
    <LinearLayout
        android:id="@+id/controlsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/routeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Route Info -->
        <LinearLayout
            android:id="@+id/routeInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DurÃ©e"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- min"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SÃ©curitÃ©"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/safetyLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/calculateRouteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculer l'itinÃ©raire sÃ»r"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/startNavigationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ©marrer la Navigation"
            android:backgroundTint="@color/safe_color"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>